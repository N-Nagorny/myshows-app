<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AppTheme.NoActionBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="?android:selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/ripple_item_show"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/episode_date"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center|start"
        android:lines="3"
        android:text="DATE_FORMAT"
        android:textColor="@color/secondary_text_material_dark"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center|start"
        android:orientation="vertical"
        android:paddingLeft="3dp"
        android:paddingStart="3dp">

        <TextView
            android:id="@+id/episode_show_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SHOW_TITLE - "
            android:textColor="@color/secondary_text_material_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/episode_season"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="_s10e2_"
                android:textColor="@color/secondary_text" />

            <TextView
                android:id="@+id/episode_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="2"
                android:text="EPISODE_TITLE"
                android:textColor="@color/secondary_text_material_dark" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/layout_item_episode_days_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="0"
        android:gravity="center"
        android:text="DAYS_LEFT"
        android:textColor="@color/secondary_text"
        android:textSize="12sp" />


</LinearLayout>