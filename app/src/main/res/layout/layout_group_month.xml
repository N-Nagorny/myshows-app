<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="?android:selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/ripple_item_show"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/layout_group_month_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center|start"
        android:padding="5dp"
        android:text="MONTH"
        android:textColor="@color/secondary_text_material_dark"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/layout_group_month_ep_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/filled_circle_backgrnd"
        android:gravity="center"
        android:text="23"
        android:textColor="@color/colorAccent"
        android:textSize="15sp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp" />
    <ImageView
        android:id="@+id/layout_group_month_arrow"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/expanded_arrow"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp" />

</LinearLayout>